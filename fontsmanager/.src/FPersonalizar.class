Public Sub btnAplicar_Click()
  FMain.sNegrito = chkNegrito.Value
  FMain.sItalico = chkItalico.Value
  FMain.sSublinhado = chkSublinhado.Value
  FMain.sTachado = chkTachado.Value
  FMain.sTamanho = sbTamanhoFonte.Value
  FMain.sCorTexto = btnCorTexto.Color
  FMain.sCorFundo = btnCorFundo.Color
  FMain.CheckFontes()
  Me.Close()
End

Public Sub btnPadrao_Click()
  FMain.sTamanho = 12
  FMain.sNegrito = False
  FMain.sItalico = False
  FMain.sSublinhado = False
  FMain.sTachado = False
  FMain.sCorTexto = Color.Black
  FMain.sCorFundo = Color.White
  FMain.CheckFontes()
  Me.Close()
End

